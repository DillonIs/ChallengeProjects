# ------------------------------
# Database configuration
# ------------------------------
# Full PostgreSQL URL format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/task_manager_db

# ------------------------------
# Security / Session settings
# ------------------------------
# Secret key used to sign session cookies
SECRET_KEY=your_super_secret_key_here

# Name of the session cookie
SESSION_COOKIE_NAME=session_id

# Session expiration in minutes (default 7 days)
SESSION_EXPIRE_MINUTES=10080

# ------------------------------
# FastAPI settings
# ------------------------------
# Enable debug mode (True/False)
DEBUG=True

# Optional: other environment variables your app may need
# Example:
# FRONTEND_URL=http://localhost:3000
